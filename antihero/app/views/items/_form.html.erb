<%= form_for([@hero, @item]) do |f| %>

  <% if @hero.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@hero.errors.count, "error") %> prohibited
        this hero from being saved:
      </h2>
      <ul>
        <% @hero.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@item.errors.count, "error") %> prohibited
        this item from being saved:
      </h2>
      <ul>
        <% @item.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :name, "Item" %><br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :level, "Item Level" %><br>
    <%= f.text_field :level %>
  </p>

  <p>
    <%= f.label :ib_id, "Item Base ID" %><br>
    <%= f.text_field :ib_id %>
  </p>

  <p>
    <%= f.label :item_type, "Type" %><br>
    <%= select_tag("item[item_type]", options_for_select(item_types, @item.item_type.to_s)) %>
  </p>


  <p>
    <%= f.label :status %><br>
    <%= select_tag("item[status]", options_for_select(item_statuses, @item.status.to_s)) %>
  </p>

  <p>
    <%= f.label :current, "Current Item" %><br>
    <%= f.text_field :current %>
  </p>
  <p>
    <%= f.label :current_level, "Current Item Level" %><br>
    <%= f.text_field :current_level %>
  </p>
  <p>
    <%= f.label :current_ib_id, "Current Item Base ID" %><br>
    <%= f.text_field :current_ib_id %>
  </p>
  <p>
    <%= f.label :note %><br>
    <%= f.text_field :note %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
