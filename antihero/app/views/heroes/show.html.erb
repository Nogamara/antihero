<h2><%= @hero.name %></h2>

<div>
  Spec: <a href="<%= @hero.spec_url %>"><%= @hero.spec_name %></a><br />
  <span><%= @hero.updated_at %></span>
</div>

<h2>Missing items:</h2>

<table>
<tr>
  <th>Name</th>
  <th>Current</th>
  <th></th>
</tr>
<% @hero.items.each do |mi| %>
<tr>
  <td><%= show_item(mi) %></td>
  <td><%= mi.current %></td>
  <td><%= mi.note %></td>
</tr>
<% end %>
</table>

<h2>Add missing item</h2>

<%= form_for([@hero, @hero.items.build]) do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :item_type %><br>
    <%= select_tag(:item_type, options_for_select(@opts)) %>
  </p>
  <p>
    <%= f.label :current %><br>
    <%= f.text_field :current %>
  </p>
  <p>
    <%= f.label :note %><br>
    <%= f.text_field :note %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<p>
<%= link_to 'Edit', edit_hero_path(@hero) %> |
<%= link_to 'Back', heroes_path %>
</p>
