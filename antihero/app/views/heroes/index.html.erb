<h1>Listing heroes</h1>

<table>
  <tr>
    <th>Hero</th>
    <th>Spec</th>
    <th>Missing</th>
    <th>Updated</th>
  </tr>

  <% @heroes.each do |hero| %>
    <tr>
      <td><%= link_to hero.name, hero_path(hero) %></td>
      <td><%= link_to hero.spec_name, hero.spec_url %></td>
      <td><%= hero.items.length %>
      <td><%= hero.updated_at %>
      <%= link_to "edit", edit_hero_path(hero) %></td>
    </tr>
  <% end %>
</table>

<p>
<%= link_to 'Add hero', new_hero_path %>
</p>
