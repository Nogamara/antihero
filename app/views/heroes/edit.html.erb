<% content_for :title, "Edit Hero" %>
<h1>Edit Hero</h1>

<%= form_for :hero, url: hero_path(@hero), method: :patch do |f| %>

  <% if @hero.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@hero.errors.count, "error") %> prohibited
        this hero from being saved:
      </h2>
      <ul>
        <% @hero.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :level %><br>
    <%= f.text_field :level %>
  </p>

  <p>
    <%= f.label :spec_url %><br>
    <%= f.text_field :spec_url %>
  </p>

  <p>
    <%= f.label :spec_name %><br>
    <%= f.text_field :spec_name %>
  </p>

  <p>
    <%= f.label :hero_class_id, "Hero (Class)" %><br>
    <%= select_tag("hero[hero_class_id]", options_for_select(as_opt, @hero.hero_class_id)) %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>

<hr>
<p>
<%= link_to 'Back', heroes_path %>
</p>
